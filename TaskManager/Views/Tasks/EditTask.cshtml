@model TaskManager.Models.Task

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="card w-50">
            <div class="card-body">
                <form asp-action="EditTask" asp-controller="Tasks" method="post">
                    <div class="validation" asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <input asp-for="Name" class="form-control" type="text" placeholder="Name of task">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description..."></textarea>
                    </div>
                    <div class="mb-3">
                         <label class="form-label">Select a priority number (from 1 to 10)</label><br/>
                        <input asp-for="Priority" class="form-control" placeholder="Priority number">
                    </div>
                     <input type="hidden" asp-for="ProjectId" value="@Model.ProjectId">
                    <button class="btn btn-light border" type="submit">Edit task</button>
                </form>
            </div>
        </div>
    </div>
</div>
